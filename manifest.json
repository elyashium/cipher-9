{
    "manifest_version": 3,
    "name": "cipher-9",
    "version": "1.0.0",
    "icons": {
      "128": "assets/icon.png"
    },
    "permissions": ["activeTab", "scripting", "storage"],
    "host_permissions": ["*://*.youtube.com/*",
    "https://*.googleapis.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [{
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at" : "document_idle"
    }],
    "action": {
      "default_popup": "popup/popup.html"
    }
  }